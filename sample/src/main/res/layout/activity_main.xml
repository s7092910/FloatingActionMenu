<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context=".MainActivity">

    <com.wanderingcan.floatingactionmenu.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fam_2"
        app:menuBackgroundColor="#ccffffff"
        app:menuBackgroundFillParent="true"
        app:fabSize="normal"
        app:elevation="6dp"
        app:layout_expand="down"
        app:layout_behavior=""
        app:layout_anchorGravity="top|right|end">

        <com.wanderingcan.floatingactionmenu.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fam_2_fab_1"
            android:src="@drawable/ic_edit_white"
            app:fabSize="mini"
            app:elevation="6dp"
            app:label="text" />

        <com.wanderingcan.floatingactionmenu.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fam_2_fab_2"
            android:src="@drawable/ic_edit_white"
            app:fabSize="mini"
            app:elevation="6dp"
            app:label="text2" />

    </com.wanderingcan.floatingactionmenu.FloatingActionMenu>


    <com.wanderingcan.floatingactionmenu.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fam_1"
        android:layout_gravity="bottom|start"
        app:menuBackgroundColor="#ccffffff"
        app:menuBackgroundFillParent="false"
        app:fabSize="normal"
        app:elevation="6dp"
        app:layout_expand="up"
        app:layout_labels="right"
        app:labelType="card_label"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:layout_anchorGravity="bottom|left|end">

        <com.wanderingcan.floatingactionmenu.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fam_fab_1"
            android:src="@drawable/ic_edit_white"
            app:fabSize="mini"
            app:elevation="6dp"
            app:label="Menu 1"
            app:backgroundTint="@android:color/holo_blue_light"/>

        <com.wanderingcan.floatingactionmenu.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fam_fab_2"
            android:src="@drawable/ic_edit_white"
            app:fabSize="mini"
            app:elevation="6dp"
            app:label="Show Snackbar"
            app:backgroundTint="@android:color/holo_blue_bright"/>
    </com.wanderingcan.floatingactionmenu.FloatingActionMenu>

    <com.wanderingcan.floatingactionmenu.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fam_3"
        android:layout_gravity="bottom|end"
        app:fabSize="normal"
        app:elevation="6dp"
        app:layout_expand="up"
        app:layout_labels="left"
        app:labelStyle="@style/menu_labels_style"
        app:labelType="text_label"
        app:layout_anchorGravity="bottom|right|end">

        <com.wanderingcan.floatingactionmenu.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fam_3_fab_1"
            android:src="@drawable/ic_edit_white"
            app:fabSize="mini"
            app:elevation="6dp"
            app:label="Menu 3" />

        <com.wanderingcan.floatingactionmenu.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fam_3_fab_2"
            android:src="@drawable/ic_edit_white"
            app:fabSize="mini"
            app:elevation="6dp"
            app:borderWidth="0dp" />

        <com.wanderingcan.floatingactionmenu.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fam_3_fab_3"
            android:src="@drawable/ic_edit_white"
            app:fabSize="mini"
            app:elevation="6dp"
            app:label="3rd button"/>

    </com.wanderingcan.floatingactionmenu.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>
